<?xml version="1.0" encoding="utf-8"?>
<selector android:color="@color/white"  xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_enabled="true">
        <shape>
            <solid android:color="@color/red"/>
            <corners android:radius="15dp"/>
        </shape>
    </item>
    <item android:state_enabled="false">
        <shape>
            <solid android:color="@color/red_highlight"/>
            <corners android:radius="15dp"/>
        </shape>
    </item>

</selector>